<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             NavigationPage.HasNavigationBar="True"
             x:Class="Apo_Chan.Views.UserReportList">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="setting" Order="Primary" Priority="3"
                     Icon="button_setting.png"
                     Command="{Binding SettingCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
              ColumnSpacing="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <AbsoluteLayout Grid.Row="0"
                            BackgroundColor="{StaticResource BarColor}"
                            Padding="0,0,0,0">
                <Button Image="button_previous.png" BackgroundColor="{StaticResource BarColor}"
                        Command="{Binding PrevMonthReportCommand}"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds =".2, 0, 50, 50">
                </Button>
                <Label Text="{Binding CurrentDate, StringFormat='{0:yyyy MMMM}'}"
                       FontSize="Medium" TextColor="{StaticResource BarTextColor}"
                       VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       AbsoluteLayout.LayoutBounds =".5, 0, 300, 50">
                </Label>
                <Button Image="button_next.png" BackgroundColor="{StaticResource BarColor}"
                        Command="{Binding NextMonthReportCommand}"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds =".8, 0, 50, 50">
                </Button>
                <Frame BackgroundColor="{StaticResource BarColor}"
                       Padding="0,0,0,0"
                       CornerRadius="0" OutlineColor="{StaticResource BarOutlineColor}"
                       AbsoluteLayout.LayoutFlags="All"
                       AbsoluteLayout.LayoutBounds ="0, 1, 1, .02">
                </Frame>
            </AbsoluteLayout>

            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"
                         Grid.Row="1" BackgroundColor="{StaticResource BackColor}"
                         Padding="16,0,16,0">
                <ListView x:Name="reportList"
                      SeparatorColor="{StaticResource DividerColor}"
                      BackgroundColor="{StaticResource BackColor}"
                      HasUnevenRows="True"
                      HeightRequest="72"
                      RefreshCommand="{Binding RefreshCommand}"
                      ItemsSource="{Binding ReportItems}">
                    <ListView.Behaviors>
                        <b:EventToCommandBehavior EventName="ItemTapped"
                                              Command="{Binding ItemTappedCommand}"
                                              EventArgsParameterPath="Item" />
                    </ListView.Behaviors>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Vertical"
                                         HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                         Padding="16,20,0,20">
                                    <Label HorizontalOptions="Start" VerticalOptions="EndAndExpand"
                                       HorizontalTextAlignment="Start" VerticalTextAlignment="End"
                                       Text="{Binding ReportTitle}"
                                       TextColor="{StaticResource TextColor}"/>
                                    <StackLayout Orientation="Horizontal"
                                             HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">
                                        <Label HorizontalOptions="Start" VerticalOptions="StartAndExpand"
                                           HorizontalTextAlignment="Start" VerticalTextAlignment="Start"
                                           TextColor="{StaticResource DateTimeColor}"
                                           Text="{Binding ReportStartDate, StringFormat='{0:d (ddd)}'}"/>
                                        <Label HorizontalOptions="Center" VerticalOptions="StartAndExpand"
                                           HorizontalTextAlignment="Center" VerticalTextAlignment="Start"
                                           TextColor="{StaticResource DateTimeColor}"
                                           Text="{Binding ReportStartTime, StringFormat='{}{0:hh}:{0:mm}'}"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

            <Button x:Name="addButton" Grid.Row="1"
                    VerticalOptions="End" HorizontalOptions="End"
                    BackgroundColor="{StaticResource BackColor}"
                    Image="button_add.png"
                    Command="{Binding AddNewReportCommand}"/>
            <ActivityIndicator Grid.Row="1"
                               HorizontalOptions="Center" VerticalOptions="Center"
                               Color="{StaticResource AccentColor}"
                               IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" >
            </ActivityIndicator>
        </Grid>
    </ContentPage.Content>
</ContentPage>