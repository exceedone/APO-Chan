<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             NavigationPage.HasNavigationBar="True"
             x:Class="Apo_Chan.Views.UserReportList">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="previousButton" Order="Primary" Priority="0"
                     Icon="button_previous.png"
                     Clicked="OnPreviousButtonClicked"/>

        <ToolbarItem Name="monthLabel" Order="Primary" Priority="1"
                     Text="{Binding CurrentDate, StringFormat='{0:yyyy/MM}'}" />

        <ToolbarItem Name="nextButton" Order="Primary" Priority="2"
                     Icon="button_next.png"
                     Clicked="OnNextButtonClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView x:Name="reportList"
                      Grid.RowSpan="2"
                      SeparatorColor="Color.Accent"
                      BackgroundColor="GhostWhite"
                      HasUnevenRows="True"
                      RefreshCommand="{Binding RefreshCommand}"
                      ItemsSource="{Binding ReportItems}">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemTapped"
                                      Command="{Binding ItemTappedCommand}"
                                      EventArgsParameterPath="Item" />
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical"
                                         HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                         Padding="10,20,0,0">
                                <StackLayout Orientation="Horizontal"
                                             HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">
                                    <Label HorizontalOptions="Start" VerticalOptions="StartAndExpand"
                                           HorizontalTextAlignment="Start" VerticalTextAlignment="Start"
                                           FontAttributes="Bold" TextColor="#212121"
                                           Text="{Binding ReportStartDate, StringFormat='{0:d (ddd)}'}"/>
                                    <Label HorizontalOptions="Center" VerticalOptions="StartAndExpand"
                                           HorizontalTextAlignment="Center" VerticalTextAlignment="Start"
                                           FontAttributes="Bold" TextColor="#212121"
                                           Text="{Binding ReportStartTime, StringFormat='{}{0:hh}:{0:mm}'}"/>
                                </StackLayout>
                                <Label HorizontalOptions="Start" VerticalOptions="EndAndExpand"
                                       HorizontalTextAlignment="Start" VerticalTextAlignment="End"
                                       Text="{Binding ReportTitle}"
                                       TextColor="#303030"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="addButton" Grid.Row="1"
                    VerticalOptions="EndAndExpand" HorizontalOptions="EndAndExpand"
                    BackgroundColor="Transparent" Scale="0.8"
                    Image="button_add_A.png"
                    Command="{Binding NavigateNewReportCommand}"/>
            <ActivityIndicator Grid.Row="0" Grid.RowSpan="2"
                               HorizontalOptions="Center" VerticalOptions="Center"
                               Color="Color.Accent"
                               x:Name="syncIndicator" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>