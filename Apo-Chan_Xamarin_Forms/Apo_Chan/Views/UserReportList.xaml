<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             NavigationPage.HasNavigationBar="False"
             x:Class="Apo_Chan.Views.UserReportList">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
              ColumnSpacing="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <AbsoluteLayout Grid.Row="0"
                            BackgroundColor="{StaticResource BarColor}"
                            Padding="0,0,0,0">
                <Button Image="button_previous.png"
                        Scale="0.75"
                        BackgroundColor="{StaticResource BarColor}"
                        Command="{Binding PrevMonthReportCommand}"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds =".25, 0, 50, 50">
                </Button>
                <Label Text="{Binding CurrentDate, StringFormat='{0:yyyy MMMM}'}"
                       TextColor="{StaticResource BarTextColor}"
                       VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       AbsoluteLayout.LayoutBounds =".5, 0, 300, 50">
                </Label>
                <Button Image="button_next.png"
                        Scale="0.75"
                        BackgroundColor="{StaticResource BarColor}"
                        Command="{Binding NextMonthReportCommand}"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds =".75, 0, 50, 50">
                </Button>
                <Button Image="button_setting.png"
                        Scale="0.75"
                        BackgroundColor="{StaticResource BarColor}"
                        Command="{Binding SettingCommand}"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds =".95, 0, 50, 50">
                </Button>
                <Frame Padding="0,0,0,0" CornerRadius="0"
                       BackgroundColor="{StaticResource BarOutlineColor}"
                       OutlineColor="{StaticResource BarOutlineColor}"
                       AbsoluteLayout.LayoutFlags="All"
                       AbsoluteLayout.LayoutBounds ="0, 1, 1, .04">
                </Frame>
            </AbsoluteLayout>

            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"
                         Grid.Row="1" BackgroundColor="{StaticResource BackColor}"
                         Padding="0,8,0,0">
                <ListView x:Name="reportList"
                          SeparatorColor="{StaticResource SeparatorColor}"
                          BackgroundColor="{StaticResource BackColor}"
                          HasUnevenRows="True"
                          RefreshCommand="{Binding RefreshCommand}"
                          ItemsSource="{Binding ReportItems}">
                    <ListView.Behaviors>
                        <b:EventToCommandBehavior EventName="ItemTapped"
                                                  Command="{Binding ItemTappedCommand}"
                                                  EventArgsParameterPath="Item" />
                    </ListView.Behaviors>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Vertical"
                                             Padding="16,10,16,10"
                                             HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Label HorizontalOptions="Start"
                                           Font="Roboto" FontSize="16.0"
                                           Text="{Binding ReportTitle}"
                                           TextColor="{StaticResource TextColor}">
                                    </Label>
                                    <AbsoluteLayout Padding="0,0,0,0"
                                                    HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                        <Label Font="Roboto" FontSize="14.0"
                                               TextColor="{StaticResource DateTimeColor}"
                                               Text="{Binding ReportStartDate, StringFormat='{0:d (ddd)}'}"
                                               AbsoluteLayout.LayoutFlags="PositionProportional"
                                               AbsoluteLayout.LayoutBounds =".1, 0, 100, 20">
                                        </Label>
                                        <Label HorizontalOptions="Center"
                                               Font="Roboto" FontSize="14.0"
                                               TextColor="{StaticResource DateTimeColor}"
                                               Text="{Binding ReportStartTime, StringFormat='{}{0:hh}:{0:mm}'}"
                                               AbsoluteLayout.LayoutFlags="PositionProportional"
                                               AbsoluteLayout.LayoutBounds =".5, 0, 100, 20">
                                        </Label>
                                    </AbsoluteLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

            <Button x:Name="addButton" Grid.Row="1"
                    VerticalOptions="End" HorizontalOptions="End"
                    BackgroundColor="Transparent"
                    Image="button_add.png"
                    Command="{Binding AddNewReportCommand}"/>
            <ActivityIndicator Grid.Row="1"
                               HorizontalOptions="Center" VerticalOptions="Center"
                               Color="{StaticResource AccentColor}"
                               IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" >
            </ActivityIndicator>
        </Grid>
    </ContentPage.Content>
</ContentPage>